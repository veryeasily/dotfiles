#!/bin/bash
#
# Borrowed from
# http://www.alandmoore.com/blog/2012/03/27/quick-google-search-in-awesome-window-manager/

term=$*
goog_exists=''

#search with surfraw
sr google "$term"

#wait until the window exists and registers with the WM
while [ -z "$goog_exists" ]; do
 goog_exists=$(wmctrl -l |grep -i "$term - Google Search")
 sleep .5
done

#could use wmctrl -a, but it's not always reliable in awesome with dual screens
wmctrl -r "$term - Google Search" -b add,demands_attention
echo "require('awful').client.urgent.jumpto()" |awesome-client
